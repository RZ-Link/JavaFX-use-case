<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="org.example.demo.view.bug.TableBugView"
      spacing="5">
    <VBox>
        <Label text="滚动表格，点击行，数据显示异常"/>
    </VBox>
    <VBox spacing="5">
        <Label text="修复前"/>
        <TableView fx:id="beforeFixTableView" maxWidth="550" prefHeight="150">
            <columns>
                <TableColumn fx:id="beforeFixNameColumn" prefWidth="200" text="姓名"/>
                <TableColumn fx:id="beforeFixAgeColumn" prefWidth="200" text="年龄"/>
                <TableColumn fx:id="beforeFixOperationColumn" prefWidth="200" text="操作"/>
            </columns>
        </TableView>
    </VBox>
    <VBox spacing="5">
        <Label text="修复后"/>
        <TableView fx:id="afterFixTableView" maxWidth="550" prefHeight="150">
            <columns>
                <TableColumn fx:id="afterFixNameColumn" prefWidth="200" text="姓名"/>
                <TableColumn fx:id="afterFixAgeColumn" prefWidth="200" text="年龄"/>
                <TableColumn fx:id="afterFixOperationColumn" prefWidth="200" text="操作"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
