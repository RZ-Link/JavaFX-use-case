<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.view.table.BasicTableView"
      alignment="CENTER"
      spacing="5">
    <HBox alignment="CENTER" spacing="5" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="nameColumn" text="姓名"/>
                <TableColumn fx:id="ageColumn" text="年龄"/>
                <TableColumn fx:id="operationColumn" text="操作"/>
            </columns>
        </TableView>
    </HBox>
</VBox>
