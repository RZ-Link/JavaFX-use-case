<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.view.table.SelectableTableView"
      alignment="CENTER"
      spacing="5">
    <HBox alignment="CENTER_LEFT" spacing="5">
        <Button text="读取" onAction="#onReadButtonClick"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS" editable="true">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="selectableColumn" text="选择"/>
                <TableColumn fx:id="column1" text="column1"/>
                <TableColumn fx:id="column2" text="column2"/>
            </columns>
        </TableView>
    </HBox>
</VBox>
