<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import atlantafx.base.controls.Card?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.view.global.ThemeView">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <Card>
        <body>
            <VBox alignment="CENTER" spacing="10">
                <Button text="PrimerLight" onAction="#onPrimerLightButtonClick"/>
                <Button text="NordLight" onAction="#onNordLightButtonClick"/>
                <Button text="GreenTheme" onAction="#onGreenThemeButtonClick"/>
            </VBox>
        </body>
    </Card>
</VBox>
