<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.view.module1.TableView"
      id="center-tab-pane"
      alignment="CENTER"
      spacing="5">
    <HBox alignment="CENTER_LEFT" spacing="5" VBox.vgrow="ALWAYS">
        <TextField/>
        <ComboBox>
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="江宁"/>
                    <String fx:value="雨花台"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="查询"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="nameColumn" text="姓名"/>
                <TableColumn fx:id="ageColumn" text="年龄"/>
                <TableColumn fx:id="operationColumn" text="操作"/>
            </columns>
        </TableView>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="5" VBox.vgrow="ALWAYS">
        <Pagination pageCount="5" currentPageIndex="1" maxPageIndicatorCount="1"/>
    </HBox>
    <stylesheets>
        <URL value="@../../css/TableView.css"/>
    </stylesheets>
</VBox>
