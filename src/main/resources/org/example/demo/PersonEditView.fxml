<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.demo.PersonEditView"
          hgap="4.0"
          vgap="8.0">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <Label text="id" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="id" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="age" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="age" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="10"/>
                <String fx:value="20"/>
                <String fx:value="30"/>
            </FXCollections>
        </items>
    </ComboBox>

</GridPane>
