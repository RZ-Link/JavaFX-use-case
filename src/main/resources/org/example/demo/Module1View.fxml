<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.Module1View"
      id="center-tab-pane"
      spacing="5">
    <HBox spacing="5">
        <TextField HBox.hgrow="ALWAYS"/>
        <ComboBox HBox.hgrow="ALWAYS">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="江宁"/>
                    <String fx:value="雨花台"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="查询" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox>
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="姓名">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="年龄">
                    <cellValueFactory>
                        <PropertyValueFactory property="age"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <Pagination pageCount="5" currentPageIndex="1" maxPageIndicatorCount="1"/>
    </HBox>
    <stylesheets>
        <URL value="@css/Module1View.css"/>
    </stylesheets>
</VBox>
